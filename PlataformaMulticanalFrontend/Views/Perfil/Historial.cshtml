@{
    ViewData["Title"] = "Mis Pedidos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/perfil.css" asp-append-version="true" />
}

<!-- Breadcrumb -->
<div class="breadcrumb-section">
    <div class="container-fluid px-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                <li class="breadcrumb-item"><a asp-controller="Perfil" asp-action="Index">Mi Perfil</a></li>
                <li class="breadcrumb-item active">Mis Pedidos</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Orders Section -->
<section class="profile-section">
    <div class="container-fluid px-4">
        <div class="row">
            <!-- Sidebar Menu -->
            <div class="col-lg-3 mb-4">
                <div class="profile-sidebar">
                    <div class="profile-avatar-section">
                        <div class="profile-avatar">
                            <img src="https://ui-avatars.com/api/?name=Juan+Perez&size=120&background=2563eb&color=fff" alt="Avatar">
                        </div>
                        <h4>Juan Pérez</h4>
                        <p>juan.perez@email.com</p>
                        <span class="member-badge">
                            <i class="fas fa-star me-1"></i>Miembro Premium
                        </span>
                    </div>

                    <nav class="profile-menu">
                        <a asp-controller="Perfil" asp-action="Index" class="menu-item">
                            <i class="fas fa-user"></i>
                            <span>Información Personal</span>
                        </a>
                        <a href="#" class="menu-item active">
                            <i class="fas fa-box"></i>
                            <span>Mis Pedidos</span>
                            <span class="badge bg-primary">3</span>
                        </a>
                        <a href="#" class="menu-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Direcciones</span>
                        </a>
                        <a href="#" class="menu-item">
                            <i class="fas fa-credit-card"></i>
                            <span>Métodos de Pago</span>
                        </a>
                        <a href="#" class="menu-item">
                            <i class="fas fa-heart"></i>
                            <span>Lista de Deseos</span>
                        </a>
                        <a href="#" class="menu-item">
                            <i class="fas fa-bell"></i>
                            <span>Notificaciones</span>
                        </a>
                        <a href="#" class="menu-item">
                            <i class="fas fa-shield-alt"></i>
                            <span>Seguridad</span>
                        </a>
                        <a href="#" class="menu-item text-danger">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Cerrar Sesión</span>
                        </a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-9">
                <!-- Page Header -->
                <div class="orders-header">
                    <h2><i class="fas fa-box me-3"></i>Mis Pedidos</h2>
                    <div class="orders-filters">
                        <select class="form-select">
                            <option value="all">Todos los pedidos</option>
                            <option value="pending">En proceso</option>
                            <option value="shipped">Enviados</option>
                            <option value="delivered">Entregados</option>
                            <option value="cancelled">Cancelados</option>
                        </select>
                        <div class="search-box">
                            <input type="text" class="form-control" placeholder="Buscar pedido...">
                            <i class="fas fa-search"></i>
                        </div>
                    </div>
                </div>

                <!-- Orders List -->
                <div class="orders-list">
                    <!-- Order 1 - In Transit -->
                    <div class="order-card">
                        <div class="order-header">
                            <div class="order-info">
                                <h4>Pedido #12345</h4>
                                <span class="order-date">21 de noviembre, 2024</span>
                            </div>
                            <span class="order-status status-shipping">
                                <i class="fas fa-shipping-fast me-2"></i>En tránsito
                            </span>
                        </div>

                        <div class="order-body">
                            <div class="order-items">
                                <div class="order-item">
                                    <img src="https://images.unsplash.com/photo-1593642632823-8f785ba67e45?w=100&h=100&fit=crop" alt="Laptop">
                                    <div class="item-details">
                                        <h5>Laptop Gaming Pro 15"</h5>
                                        <p>Color: Negro | RAM: 16GB | SSD: 512GB</p>
                                        <span class="item-quantity">Cantidad: 1</span>
                                    </div>
                                    <div class="item-price">$1,600</div>
                                </div>
                                <div class="order-item">
                                    <img src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?w=100&h=100&fit=crop" alt="Auriculares">
                                    <div class="item-details">
                                        <h5>Auriculares Bluetooth Premium</h5>
                                        <p>Color: Negro Mate</p>
                                        <span class="item-quantity">Cantidad: 2</span>
                                    </div>
                                    <div class="item-price">$178</div>
                                </div>
                            </div>

                            <div class="order-tracking">
                                <div class="tracking-progress">
                                    <div class="tracking-step completed">
                                        <div class="step-icon"><i class="fas fa-check"></i></div>
                                        <span>Pedido Confirmado</span>
                                        <small>21 Nov, 10:30 AM</small>
                                    </div>
                                    <div class="tracking-line completed"></div>
                                    <div class="tracking-step completed">
                                        <div class="step-icon"><i class="fas fa-check"></i></div>
                                        <span>En Preparación</span>
                                        <small>21 Nov, 2:15 PM</small>
                                    </div>
                                    <div class="tracking-line active"></div>
                                    <div class="tracking-step active">
                                        <div class="step-icon"><i class="fas fa-truck"></i></div>
                                        <span>En Tránsito</span>
                                        <small>22 Nov, 8:00 AM</small>
                                    </div>
                                    <div class="tracking-line"></div>
                                    <div class="tracking-step">
                                        <div class="step-icon"><i class="fas fa-home"></i></div>
                                        <span>Entregado</span>
                                        <small>Estimado: 23 Nov</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="order-footer">
                            <div class="order-total">
                                <span>Total:</span>
                                <strong>$2,472</strong>
                            </div>
                            <div class="order-actions">
                                <button class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-2"></i>Ver Detalles
                                </button>
                                <button class="btn btn-primary btn-sm">
                                    <i class="fas fa-map-marker-alt me-2"></i>Rastrear Pedido
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Order 2 - Delivered -->
                    <div class="order-card">
                        <div class="order-header">
                            <div class="order-info">
                                <h4>Pedido #12344</h4>
                                <span class="order-date">15 de noviembre, 2024</span>
                            </div>
                            <span class="order-status status-delivered">
                                <i class="fas fa-check-circle me-2"></i>Entregado
                            </span>
                        </div>

                        <div class="order-body">
                            <div class="order-items">
                                <div class="order-item">
                                    <img src="https://images.unsplash.com/photo-1523275335684-37898b6baf30?w=100&h=100&fit=crop" alt="Smartwatch">
                                    <div class="item-details">
                                        <h5>Smartwatch Pro Serie 6</h5>
                                        <p>Color: Plata | Tamaño: 44mm</p>
                                        <span class="item-quantity">Cantidad: 1</span>
                                    </div>
                                    <div class="item-price">$299</div>
                                </div>
                            </div>

                            <div class="delivery-confirmation">
                                <i class="fas fa-check-circle text-success"></i>
                                <div>
                                    <strong>Entregado el 16 de noviembre</strong>
                                    <p>Recibido por: Juan Pérez</p>
                                </div>
                            </div>
                        </div>

                        <div class="order-footer">
                            <div class="order-total">
                                <span>Total:</span>
                                <strong>$299</strong>
                            </div>
                            <div class="order-actions">
                                <button class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-2"></i>Ver Detalles
                                </button>
                                <button class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-star me-2"></i>Calificar
                                </button>
                                <button class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-redo me-2"></i>Comprar de Nuevo
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Order 3 - Processing -->
                    <div class="order-card">
                        <div class="order-header">
                            <div class="order-info">
                                <h4>Pedido #12343</h4>
                                <span class="order-date">10 de noviembre, 2024</span>
                            </div>
                            <span class="order-status status-processing">
                                <i class="fas fa-clock me-2"></i>En preparación
                            </span>
                        </div>

                        <div class="order-body">
                            <div class="order-items">
                                <div class="order-item">
                                    <img src="https://images.unsplash.com/photo-1572635196237-14b3f281503f?w=100&h=100&fit=crop" alt="Camiseta">
                                    <div class="item-details">
                                        <h5>Camiseta Premium Cotton</h5>
                                        <p>Talla: M | Color: Azul</p>
                                        <span class="item-quantity">Cantidad: 3</span>
                                    </div>
                                    <div class="item-price">$87</div>
                                </div>
                            </div>
                        </div>

                        <div class="order-footer">
                            <div class="order-total">
                                <span>Total:</span>
                                <strong>$87</strong>
                            </div>
                            <div class="order-actions">
                                <button class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-2"></i>Ver Detalles
                                </button>
                                <button class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-times me-2"></i>Cancelar Pedido
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pagination -->
                <div class="orders-pagination">
                    <nav>
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#"><i class="fas fa-chevron-left"></i></a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>