@{
    ViewData["Title"] = "Inicio";
}

<!-- Hero Section Compacto -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="hero-title">Compra Todo en un Solo Lugar</h1>
                <p class="hero-subtitle">Productos físicos, servicios profesionales y contenidos digitales</p>
                
                <!-- Search Bar -->
                <div class="hero-search mt-4">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="¿Qué estás buscando hoy?">
                        <button class="btn btn-primary" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                
                <div class="mt-3 quick-actions">
                    <a href="#" class="btn btn-light btn-sm">Electrónica</a>
                    <a href="#" class="btn btn-light btn-sm">Diseño Web</a>
                    <a href="#" class="btn btn-light btn-sm">Cursos Online</a>
                    <a href="#" class="btn btn-light btn-sm">Consultoría</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Grid -->
<section class="categories-section">
    <div class="container-fluid px-4">
        <div class="row g-3">
            <div class="col-md-4">
                <a asp-controller="Catalogo" asp-action="Index" asp-route-tipo="fisicos" class="text-decoration-none">
                    <div class="category-item-card">
                        <div class="category-icon-box">
                            <i class="fas fa-box"></i>
                        </div>
                        <h5>Productos Físicos</h5>
                        <p>Electrónica, ropa, hogar y más</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a asp-controller="Catalogo" asp-action="Index" asp-route-tipo="servicios" class="text-decoration-none">
                    <div class="category-item-card">
                        <div class="category-icon-box">
                            <i class="fas fa-handshake"></i>
                        </div>
                        <h5>Servicios Profesionales</h5>
                        <p>Diseño, desarrollo, marketing</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a asp-controller="Catalogo" asp-action="Index" asp-route-tipo="digitales" class="text-decoration-none">
                    <div class="category-item-card">
                        <div class="category-icon-box">
                            <i class="fas fa-cloud"></i>
                        </div>
                        <h5>Contenido Digital</h5>
                        <p>Cursos, ebooks, software</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

