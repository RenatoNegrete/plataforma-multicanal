@model List<PlataformaMulticanalFrontend.Models.Producto>

@{
    ViewData["Title"] = "Inicio";
}

<!-- Hero Section Compacto -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="hero-title">Compra Todo en un Solo Lugar</h1>
                <p class="hero-subtitle">Productos físicos, servicios profesionales y contenidos digitales</p>
                
                <!-- Search Bar -->
                <div class="hero-search mt-4">
                    <form asp-controller="Catalogo" asp-action="Buscar" method="get">
                        <div class="input-group">
                            <input type="text" name="q" class="form-control" placeholder="¿Qué estás buscando hoy?">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                
                <div class="mt-3 quick-actions">
                    <a asp-controller="Catalogo" asp-action="Index" asp-route-categoria="electronica" class="btn btn-light btn-sm">Electrónica</a>
                    <a asp-controller="Catalogo" asp-action="Index" asp-route-categoria="tecnologia" class="btn btn-light btn-sm">Tecnología</a>
                    <a asp-controller="Catalogo" asp-action="Index" asp-route-categoria="ropa" class="btn btn-light btn-sm">Moda</a>
                    <a asp-controller="Catalogo" asp-action="Index" asp-route-categoria="hogar" class="btn btn-light btn-sm">Hogar</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Grid -->
<section class="categories-section">
    <div class="container-fluid px-4">
        <div class="row g-3">
            <div class="col-md-4">
                <a asp-controller="Catalogo" asp-action="Index" asp-route-categoria="tecnologia" class="text-decoration-none">
                    <div class="category-item-card">
                        <div class="category-icon-box">
                            <i class="fas fa-box"></i>
                        </div>
                        <h5>Tecnología</h5>
                        <p>Computadores, accesorios y más</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a asp-controller="Catalogo" asp-action="Index" asp-route-categoria="ropa" class="text-decoration-none">
                    <div class="category-item-card">
                        <div class="category-icon-box">
                            <i class="fas fa-tshirt"></i>
                        </div>
                        <h5>Moda</h5>
                        <p>Ropa y accesorios</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a asp-controller="Catalogo" asp-action="Index" asp-route-categoria="hogar" class="text-decoration-none">
                    <div class="category-item-card">
                        <div class="category-icon-box">
                            <i class="fas fa-home"></i>
                        </div>
                        <h5>Hogar</h5>
                        <p>Decoración y muebles</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products -->
<section class="products-section">
    <div class="container-fluid px-4">
        <div class="section-header d-flex justify-content-between align-items-center">
            <div>
                <h2 class="section-title">Productos Destacados</h2>
                <p class="section-subtitle">Los mejores productos disponibles</p>
            </div>
            <a asp-controller="Catalogo" asp-action="Index" class="btn btn-outline-primary">
                Ver Todo <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
        
        <div class="row row-cols-2 row-cols-md-4 row-cols-lg-6 g-3">
            @if (Model != null && Model.Any())
            {
                @foreach (var producto in Model)
                {
                    <div class="col">
                        <div class="product-card">
                            <div class="product-image-wrapper">
                                @if (producto.Stock > 0 && producto.Stock < 10)
                                {
                                    <span class="badge bg-warning product-badge">Pocas unidades</span>
                                }
                                else if (producto.Stock == 0)
                                {
                                    <span class="badge bg-danger product-badge">Agotado</span>
                                }
                                
                                <img src="@(string.IsNullOrEmpty(producto.Imagen) ? "https://via.placeholder.com/400x300?text=Producto" : producto.Imagen)" 
                                     alt="@producto.Nombre"
                                     onerror="this.src='https://via.placeholder.com/400x300?text=Sin+Imagen'">
                            </div>
                            <div class="product-card-body">
                                <div class="product-category">@(producto.Categoria ?? "General")</div>
                                <h5 class="product-title">@producto.Nombre</h5>
                                @if (!string.IsNullOrEmpty(producto.Descripcion))
                                {
                                    <p class="product-description">@producto.Descripcion.Substring(0, Math.Min(50, producto.Descripcion.Length))@(producto.Descripcion.Length > 50 ? "..." : "")</p>
                                }
                                <div class="product-price-section">
                                    <div>
                                        <div class="product-price">$@producto.Precio.ToString("N0")</div>
                                        @if (producto.Stock > 0)
                                        {
                                            <small class="text-muted">@producto.Stock disponibles</small>
                                        }
                                    </div>
                                    @if (producto.Stock > 0)
                                    {
                                        <button class="btn-add-cart" onclick="agregarAlCarrito('@producto.Id')">
                                            <i class="fas fa-cart-plus"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn-add-cart" disabled>
                                            <i class="fas fa-times"></i>
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                    <h5>No hay productos disponibles</h5>
                    <p class="text-muted">Por favor, verifica que el servicio de catálogo esté funcionando.</p>
                </div>
            }
        </div>
    </div>
</section>

<!-- Features Compacto -->
<section class="features-section">
    <div class="container-fluid px-4">
        <div class="row g-4">
            <div class="col-md-3">
                <div class="feature-item">
                    <div class="feature-icon-sm">
                        <i class="fas fa-truck"></i>
                    </div>
                    <div>
                        <h6>Envío Rápido</h6>
                        <p>Entrega en 24-48h</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-item">
                    <div class="feature-icon-sm">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div>
                        <h6>Pago Seguro</h6>
                        <p>Certificado PCI DSS</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-item">
                    <div class="feature-icon-sm">
                        <i class="fas fa-headset"></i>
                    </div>
                    <div>
                        <h6>Soporte 24/7</h6>
                        <p>Atención inmediata</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-item">
                    <div class="feature-icon-sm">
                        <i class="fas fa-undo"></i>
                    </div>
                    <div>
                        <h6>Devolución Fácil</h6>
                        <p>30 días de garantía</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

