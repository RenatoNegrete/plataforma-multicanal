@{
    ViewData["Title"] = "Gestión de Proveedores";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<section class="admin-section">
    <div class="container-fluid px-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-2 mb-4">
                <div class="admin-sidebar">
                    <div class="sidebar-brand">
                        <i class="fas fa-user-shield"></i>
                        <span>Admin Panel</span>
                    </div>
                    <nav class="admin-menu">
                        <a asp-controller="Admin" asp-action="Dashboard" class="menu-item">
                            <i class="fas fa-chart-line"></i>
                            <span>Dashboard</span>
                        </a>
                        <a asp-controller="Admin" asp-action="Catalogo" class="menu-item">
                            <i class="fas fa-box"></i>
                            <span>Catálogo</span>
                        </a>
                        <a href="#" class="menu-item active">
                            <i class="fas fa-truck"></i>
                            <span>Proveedores</span>
                        </a>
                        <a asp-controller="Admin" asp-action="Inventarios" class="menu-item">
                            <i class="fas fa-warehouse"></i>
                            <span>Inventarios</span>
                        </a>
                        <a asp-controller="Admin" asp-action="Precios" class="menu-item">
                            <i class="fas fa-tags"></i>
                            <span>Precios</span>
                        </a>
                        <a asp-controller="Admin" asp-action="Reportes" class="menu-item">
                            <i class="fas fa-chart-bar"></i>
                            <span>Reportes</span>
                        </a>
                        <hr class="sidebar-divider">
                        <a asp-controller="Home" asp-action="Index" class="menu-item">
                            <i class="fas fa-store"></i>
                            <span>Ver Tienda</span>
                        </a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-10">
                <div class="admin-header">
                    <div>
                        <h2><i class="fas fa-truck me-3"></i>Gestión de Proveedores</h2>
                        <p>Administra tus proveedores y socios comerciales</p>
                    </div>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProviderModal">
                        <i class="fas fa-plus me-2"></i>Nuevo Proveedor
                    </button>
                </div>

                <!-- Stats -->
                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-primary">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="stat-info">
                                <span class="stat-label">Total Proveedores</span>
                                <h3 class="stat-value">124</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-success">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="stat-info">
                                <span class="stat-label">Activos</span>
                                <h3 class="stat-value">108</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-warning">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="stat-info">
                                <span class="stat-label">Pendientes</span>
                                <h3 class="stat-value">12</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-danger">
                                <i class="fas fa-star"></i>
                            </div>
                            <div class="stat-info">
                                <span class="stat-label">Rating Promedio</span>
                                <h3 class="stat-value">4.6</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Providers Grid -->
                <div class="row g-3">
                    @for (int i = 1; i <= 8; i++)
                    {
                        <div class="col-md-6 col-lg-3">
                            <div class="provider-card">
                                <div class="provider-header">
                                    <div class="provider-logo">
                                        <i class="fas fa-building"></i>
                                    </div>
                                    <span class="provider-status @(i % 3 == 0 ? "inactive" : "active")">
                                        @(i % 3 == 0 ? "Inactivo" : "Activo")
                                    </span>
                                </div>
                                <div class="provider-info">
                                    <h5>Proveedor @i S.A.</h5>
                                    <p class="provider-category">Tecnología</p>
                                    <div class="provider-meta">
                                        <div class="meta-item">
                                            <i class="fas fa-box"></i>
                                            <span>@((i * 12)) productos</span>
                                        </div>
                                        <div class="meta-item">
                                            <i class="fas fa-star text-warning"></i>
                                            <span>4.@i</span>
                                        </div>
                                    </div>
                                    <div class="provider-contact">
                                        <small>
                                            <i class="fas fa-envelope me-1"></i>
                                            proveedor@(@i).com
                                        </small>
                                    </div>
                                </div>
                                <div class="provider-actions">
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Add Provider Modal -->
<div class="modal fade" id="addProviderModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus me-2"></i>Nuevo Proveedor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Nombre del Proveedor</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Teléfono</label>
                        <input type="tel" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Categoría</label>
                        <select class="form-select">
                            <option>Tecnología</option>
                            <option>Moda</option>
                            <option>Hogar</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .provider-card {
            background: white;
            border-radius: 12px;
            border: 2px solid #e5e7eb;
            overflow: hidden;
            transition: all 0.3s;
        }
        .provider-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }
        .provider-header {
            padding: 1.5rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .provider-logo {
            width: 60px;
            height: 60px;
            background: white;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: #667eea;
        }
        .provider-status {
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 700;
        }
        .provider-status.active {
            background: #d1fae5;
            color: #065f46;
        }
        .provider-status.inactive {
            background: #fee2e2;
            color: #991b1b;
        }
        .provider-info {
            padding: 1.5rem;
        }
        .provider-info h5 {
            font-size: 1.1rem;
            font-weight: 700;
            margin-bottom: 0.3rem;
        }
        .provider-category {
            color: #6b7280;
            font-size: 0.85rem;
            margin-bottom: 1rem;
        }
        .provider-meta {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
        }
        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.4rem;
            font-size: 0.85rem;
            color: #6b7280;
        }
        .provider-contact {
            padding-top: 1rem;
            border-top: 1px solid #e5e7eb;
        }
        .provider-actions {
            padding: 1rem 1.5rem;
            background: #f9fafb;
            display: flex;
            gap: 0.5rem;
            justify-content: center;
        }
    </style>
}