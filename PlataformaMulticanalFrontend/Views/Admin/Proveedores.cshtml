@model List<PlataformaMulticanalFrontend.Models.Proveedor>

@{
    ViewData["Title"] = "Gestión de Proveedores";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<section class="admin-section">
    <div class="container-fluid px-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-2 mb-4">
                <div class="admin-sidebar">
                    <div class="sidebar-brand">
                        <i class="fas fa-user-shield"></i>
                        <span>Admin Panel</span>
                    </div>
                    <nav class="admin-menu">
                        <a asp-controller="Admin" asp-action="Dashboard" class="menu-item">
                            <i class="fas fa-chart-line"></i>
                            <span>Dashboard</span>
                        </a>
                        <a asp-controller="Admin" asp-action="Catalogo" class="menu-item">
                            <i class="fas fa-box"></i>
                            <span>Catálogo</span>
                        </a>
                        <a href="#" class="menu-item active">
                            <i class="fas fa-truck"></i>
                            <span>Proveedores</span>
                        </a>
                        <a asp-controller="Admin" asp-action="Inventarios" class="menu-item">
                            <i class="fas fa-warehouse"></i>
                            <span>Inventarios</span>
                        </a>
                        <a asp-controller="Admin" asp-action="Precios" class="menu-item">
                            <i class="fas fa-tags"></i>
                            <span>Precios</span>
                        </a>
                        
                        <hr class="sidebar-divider">
                        <a asp-controller="Home" asp-action="Index" class="menu-item">
                            <i class="fas fa-store"></i>
                            <span>Ver Tienda</span>
                        </a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-10">
                <div class="admin-header">
                    <div>
                        <h2><i class="fas fa-truck me-3"></i>Gestión de Proveedores</h2>
                        <p>Administra tus proveedores y socios comerciales</p>
                    </div>
                    <button class="btn btn-primary" onclick="abrirModalCrear()">
                        <i class="fas fa-plus me-2"></i>Nuevo Proveedor
                    </button>
                </div>

                <!-- Alerts -->
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Stats -->
                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-primary">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="stat-info">
                                <span class="stat-label">Total Proveedores</span>
                                <h3 class="stat-value">@ViewBag.TotalProveedores</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-success">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="stat-info">
                                <span class="stat-label">Activos</span>
                                <h3 class="stat-value">@ViewBag.ProveedoresActivos</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-warning">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="stat-info">
                                <span class="stat-label">Inactivos</span>
                                <h3 class="stat-value">@ViewBag.ProveedoresPendientes</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-info">
                                <i class="fas fa-globe"></i>
                            </div>
                            <div class="stat-info">
                                <span class="stat-label">APIs Conectadas</span>
                                <h3 class="stat-value">@ViewBag.TotalProveedores</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Providers Grid -->
                <div class="row g-3">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var proveedor in Model)
                        {
                            <div class="col-md-6 col-lg-3">
                                <div class="provider-card">
                                    <div class="provider-header">
                                        <div class="provider-logo">
                                            <i class="fas fa-building"></i>
                                        </div>
                                        <span class="provider-status active">
                                            Activo
                                        </span>
                                    </div>
                                    <div class="provider-info">
                                        <h5>@proveedor.Nombre</h5>
                                        <div class="provider-meta">
                                            <div class="meta-item">
                                                <i class="fas fa-phone"></i>
                                                <span>@proveedor.Telefono</span>
                                            </div>
                                        </div>
                                        <div class="provider-contact">
                                            <small>
                                                <i class="fas fa-envelope me-1"></i>
                                                @proveedor.Email
                                            </small>
                                        </div>
                                        @if (!string.IsNullOrEmpty(proveedor.Direccion))
                                        {
                                            <div class="provider-contact mt-2">
                                                <small>
                                                    <i class="fas fa-map-marker-alt me-1"></i>
                                                    @proveedor.Direccion
                                                </small>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(proveedor.Url))
                                        {
                                            <div class="provider-url mt-2">
                                                <small>
                                                    <i class="fas fa-link me-1"></i>
                                                    <a href="@proveedor.Url" target="_blank">API Endpoint</a>
                                                </small>
                                            </div>
                                        }
                                    </div>
                                    <div class="provider-actions">
                                        <button class="btn btn-sm btn-outline-primary" onclick="abrirModalEditar(@proveedor.Id)" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-info" onclick="verProductosProveedor(@proveedor.Id)" title="Ver productos">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" onclick="confirmarEliminar(@proveedor.Id, '@proveedor.Nombre')" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                No hay proveedores registrados. ¡Crea el primero!
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal Container -->
<div id="modalContainer"></div>

<!-- Confirm Delete Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas eliminar el proveedor <strong id="proveedorNombreEliminar"></strong>?</p>
                <p class="text-danger"><small>Esta acción no se puede deshacer.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form method="post" id="formEliminar" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .provider-card {
            background: white;
            border-radius: 12px;
            border: 2px solid #e5e7eb;
            overflow: hidden;
            transition: all 0.3s;
        }
        .provider-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }
        .provider-header {
            padding: 1.5rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .provider-logo {
            width: 60px;
            height: 60px;
            background: white;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: #667eea;
        }
        .provider-status {
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 700;
        }
        .provider-status.active {
            background: #d1fae5;
            color: #065f46;
        }
        .provider-status.inactive {
            background: #fee2e2;
            color: #991b1b;
        }
        .provider-info {
            padding: 1.5rem;
        }
        .provider-info h5 {
            font-size: 1.1rem;
            font-weight: 700;
            margin-bottom: 0.3rem;
        }
        .provider-category {
            color: #6b7280;
            font-size: 0.85rem;
            margin-bottom: 1rem;
        }
        .provider-meta {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
        }
        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.4rem;
            font-size: 0.85rem;
            color: #6b7280;
        }
        .provider-contact, .provider-url {
            padding-top: 1rem;
            border-top: 1px solid #e5e7eb;
        }
        .provider-actions {
            padding: 1rem 1.5rem;
            background: #f9fafb;
            display: flex;
            gap: 0.5rem;
            justify-content: center;
        }
    </style>

    <script>
        async function abrirModalCrear() {
            try {
                const response = await fetch('@Url.Action("CrearProveedor", "Admin")');
                const html = await response.text();
                document.getElementById('modalContainer').innerHTML = html;
                const modal = new bootstrap.Modal(document.getElementById('crearProveedorModal'));
                modal.show();
            } catch (error) {
                console.error('Error al cargar modal:', error);
                alert('Error al abrir el formulario');
            }
        }

        async function abrirModalEditar(id) {
            try {
                const response = await fetch(`@Url.Action("EditarProveedor", "Admin")/${id}`);
                const html = await response.text();
                document.getElementById('modalContainer').innerHTML = html;
                const modal = new bootstrap.Modal(document.getElementById('editarProveedorModal'));
                modal.show();
            } catch (error) {
                console.error('Error al cargar modal:', error);
                alert('Error al abrir el formulario de edición');
            }
        }

        async function verProductosProveedor(id) {
            try {
                const response = await fetch(`@Url.Action("VerProductosProveedor", "Admin")/${id}`);
                const html = await response.text();
                document.getElementById('modalContainer').innerHTML = html;
                const modal = new bootstrap.Modal(document.getElementById('productosProveedorModal'));
                modal.show();
            } catch (error) {
                console.error('Error al cargar productos:', error);
                alert('Error al cargar los productos del proveedor');
            }
        }

        function confirmarEliminar(id, nombre) {
            document.getElementById('proveedorNombreEliminar').textContent = nombre;
            document.getElementById('formEliminar').action = `@Url.Action("EliminarProveedor", "Admin")/${id}`;
            const modal = new bootstrap.Modal(document.getElementById('confirmDeleteModal'));
            modal.show();
        }
    </script>
}