@model PlataformaMulticanalFrontend.Models.Proveedor

<div class="modal fade" id="crearProveedorModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-controller="Admin" asp-action="CrearProveedor" method="post">
                @Html.AntiForgeryToken()
                
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-plus me-2"></i>Nuevo Proveedor
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre del Proveedor *</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Proveedor SA" required />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">Email *</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="correo@ejemplo.com" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Telefono" class="form-label">Teléfono *</label>
                            <input asp-for="Telefono" type="tel" class="form-control" placeholder="+57 300 123 4567" required />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        
                        <div class="col-12 mb-3">
                            <label asp-for="Direccion" class="form-label">Dirección</label>
                            <input asp-for="Direccion" class="form-control" placeholder="Dirección física del proveedor" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>
                        
                        <div class="col-12 mb-3">
                            <label asp-for="Url" class="form-label">URL de la API *</label>
                            <input asp-for="Url" type="url" class="form-control" placeholder="http://localhost:8082" required />
                            <span asp-validation-for="Url" class="text-danger"></span>
                            <small class="form-text text-muted">URL donde se encuentra el servicio del proveedor</small>
                        </div>
                    </div>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>