    }

    .product-price {
        font-size: 1.25rem;
        font-weight: 700;
        color: #0d6efd;
    }

    .btn-add-cart {
        background: #0d6efd;
        color: white;
        border: none;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-add-cart:hover:not(:disabled) {
        background: #0b5ed7;
        transform: scale(1.1);
    }

    .btn-add-cart:disabled {
        background: #ccc;
