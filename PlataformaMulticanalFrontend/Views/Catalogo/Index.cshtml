@model List<PlataformaMulticanalFrontend.Models.Producto>
@{
    ViewData["Title"] = "Catálogo de Productos";
    var categorias = ViewBag.Categorias as List<string> ?? new List<string>();
    var categoriaSeleccionada = ViewBag.CategoriaSeleccionada as string;
    var buscarTexto = ViewBag.BuscarTexto as string;
    var paginaActual = ViewBag.PaginaActual ?? 1;
    var totalPaginas = ViewBag.TotalPaginas ?? 1;
    var totalProductos = ViewBag.TotalProductos ?? 0;
}

<!-- Breadcrumb -->
<div class="breadcrumb-section">
    <div class="container-fluid px-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                <li class="breadcrumb-item active">Catálogo</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Catalog Section -->
<section class="catalog-section py-4">
    <div class="container-fluid px-4">
        <div class="row">
            <!-- Sidebar Filters -->
            <div class="col-lg-3 col-md-4 mb-4">
                <div class="filters-sidebar">
                    <!-- Búsqueda -->
                    <div class="filter-group">
                        <h5 class="filter-title">
                            <i class="fas fa-search me-2"></i>Buscar
                        </h5>
                        <form asp-action="Index" method="get">
                            <div class="input-group mb-3">
                                <input type="text" 
                                       class="form-control" 
                                       name="buscar" 
                                       placeholder="Buscar productos..." 
                                       value="@buscarTexto">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                            @if (!string.IsNullOrEmpty(categoriaSeleccionada))
                            {
                                <input type="hidden" name="categoria" value="@categoriaSeleccionada">
                            }
                        </form>
                    </div>

                    <!-- Categorías -->
                    <div class="filter-group">
                        <h5 class="filter-title">
                            <i class="fas fa-filter me-2"></i>Categorías
                        </h5>
                        <div class="filter-options">
                            <div class="list-group">
                                <a href="@Url.Action("Index", new { buscar = buscarTexto })" 
                                   class="list-group-item list-group-item-action @(string.IsNullOrEmpty(categoriaSeleccionada) || categoriaSeleccionada == "todas" ? "active" : "")">
                                    <i class="fas fa-th me-2"></i>Todas las categorías
                                    <span class="badge bg-primary rounded-pill float-end">@totalProductos</span>
                                </a>
                                @foreach (var cat in categorias)
                                {
                                    var categoriaDisplay = cat switch
                                    {
                                        "fisico" => "Productos Físicos",
                                        "servicio" => "Servicios",
                                        "suscripcion" => "Suscripciones",
                                        _ => cat
                                    };
                                    var iconoCategoria = cat switch
                                    {
                                        "fisico" => "fa-box",
                                        "servicio" => "fa-briefcase",
                                        "suscripcion" => "fa-sync-alt",
                                        _ => "fa-tag"
                                    };
                                    
                                    <a href="@Url.Action("Index", new { categoria = cat, buscar = buscarTexto })" 
                                       class="list-group-item list-group-item-action @(categoriaSeleccionada == cat ? "active" : "")">
                                        <i class="fas @iconoCategoria me-2"></i>@categoriaDisplay
                                    </a>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Reset Filters -->
                    @if (!string.IsNullOrEmpty(buscarTexto) || !string.IsNullOrEmpty(categoriaSeleccionada))
                    {
                        <div class="filter-group">
                            <a href="@Url.Action("Index")" class="btn btn-outline-danger w-100">
                                <i class="fas fa-redo me-2"></i>Limpiar Filtros
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Products Grid -->
            <div class="col-lg-9 col-md-8">
                <!-- Toolbar -->
                <div class="catalog-toolbar mb-4">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <div>
                            <h5 class="mb-0">
                                @if (totalProductos == 0)
                                {
                                    <span>No se encontraron productos</span>
                                }
                                else if (totalProductos == 1)
                                {
                                    <span>1 Producto Encontrado</span>
                                }
                                else
                                {
                                    <span>@totalProductos Productos Encontrados</span>
                                }
                            </h5>
                            @if (!string.IsNullOrEmpty(buscarTexto))
                            {
                                <small class="text-muted">Búsqueda: "@buscarTexto"</small>
                            }
                        </div>
                    </div>
                </div>

                @if (Model.Count == 0)
                {
                    <!-- Empty State -->
                    <div class="text-center py-5">
                        <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                        <h4>No se encontraron productos</h4>
                        <p class="text-muted">Intenta ajustar tus filtros o realiza una nueva búsqueda</p>
                        <a href="@Url.Action("Index")" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-2"></i>Ver todos los productos
                        </a>
                    </div>
                }
                else
                {
                    <!-- Products Grid -->
                    <div class="products-grid">
                        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4">
                            @foreach (var producto in Model)
                            {
                                <div class="col">
                                    <div class="product-card h-100">
                                        <div class="product-image-wrapper">
                                            @if (producto.Stock == 0)
                                            {
                                                <span class="badge bg-danger product-badge">Agotado</span>
                                            }
                                            else if (producto.Stock < 10)
                                            {
                                                <span class="badge bg-warning product-badge">Últimas @producto.Stock unidades</span>
                                            }
                                            else if (!string.IsNullOrEmpty(producto.Categoria))
                                            {
                                                var badgeClass = producto.Categoria.ToLower() switch
                                                {
                                                    "fisico" => "bg-primary",
                                                    "servicio" => "bg-success",
                                                    "suscripcion" => "bg-info",
                                                    _ => "bg-secondary"
                                                };
                                                var categoriaDisplay = producto.Categoria.ToLower() switch
                                                {
                                                    "fisico" => "Físico",
                                                    "servicio" => "Servicio",
                                                    "suscripcion" => "Suscripción",
                                                    _ => producto.Categoria
                                                };
                                                <span class="badge @badgeClass product-badge">@categoriaDisplay</span>
                                            }
                                            
                                            <button class="btn-wishlist" title="Agregar a favoritos">
                                                <i class="far fa-heart"></i>
                                            </button>
                                            
                                            <a asp-controller="Catalogo" asp-action="Detalle" asp-route-id="@producto.Id">
                                                <img src="@(string.IsNullOrEmpty(producto.Imagen) ? "https://images.unsplash.com/photo-1505740420928-5e560c06d30e?w=400&h=300&fit=crop" : producto.Imagen)" 
                                                     alt="@producto.Nombre"
                                                     class="product-image">
                                            </a>
                                            
                                            <div class="product-quick-view">
                                                <a asp-controller="Catalogo" asp-action="Detalle" asp-route-id="@producto.Id" 
                                                   class="btn btn-sm btn-light">
                                                    <i class="fas fa-eye me-1"></i>Vista Rápida
                                                </a>
                                            </div>
                                        </div>
                                        
                                        <div class="product-card-body">
                                            @if (!string.IsNullOrEmpty(producto.Categoria))
                                            {
                                                <div class="product-category">
                                                    @(producto.Categoria.ToUpper())
                                                </div>
                                            }
                                            
                                            <h5 class="product-title">
                                                <a asp-controller="Catalogo" asp-action="Detalle" asp-route-id="@producto.Id">
                                                    @producto.Nombre
                                                </a>
                                            </h5>
                                            
                                            @if (!string.IsNullOrEmpty(producto.Descripcion))
                                            {
                                                <p class="product-description">
                                                    @(producto.Descripcion.Length > 80 
                                                        ? producto.Descripcion.Substring(0, 80) + "..." 
                                                        : producto.Descripcion)
                                                </p>
                                            }
                                            
                                            <div class="product-footer">
                                                <div class="product-price-section">
                                                    <div>
                                                        <div class="product-price">
                                                            $@producto.Precio.ToString("N2")
                                                        </div>
                                                        @if (producto.Stock > 0)
                                                        {
                                                            <small class="text-success">
                                                                <i class="fas fa-check-circle"></i> Disponible
                                                            </small>
                                                        }
                                                        else
                                                        {
                                                            <small class="text-danger">
                                                                <i class="fas fa-times-circle"></i> Sin stock
                                                            </small>
                                                        }
                                                    </div>
                                                    
                                                    @if (producto.Stock > 0)
                                                    {
                                                        <button class="btn-add-cart" 
                                                                data-producto-id="@producto.Id"
                                                                title="Agregar al carrito">
                                                            <i class="fas fa-cart-plus"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn-add-cart" disabled title="Sin stock">
                                                            <i class="fas fa-ban"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Pagination -->
                    @if (totalPaginas > 1)
                    {
                        <div class="pagination-wrapper mt-4">
                            <nav aria-label="Navegación de páginas">
                                <ul class="pagination justify-content-center">
                                    <!-- Previous -->
                                    <li class="page-item @(paginaActual <= 1 ? "disabled" : "")">
                                        <a class="page-link" 
                                           href="@Url.Action("Index", new { pagina = paginaActual - 1, buscar = buscarTexto, categoria = categoriaSeleccionada })"
                                           aria-label="Anterior">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>

                                    @{
                                        var startPage = Math.Max(1, paginaActual - 2);
                                        var endPage = Math.Min(totalPaginas, paginaActual + 2);
                                    }

                                    @if (startPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", new { pagina = 1, buscar = buscarTexto, categoria = categoriaSeleccionada })">1</a>
                                        </li>
                                        @if (startPage > 2)
                                        {
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                        }
                                    }

                                    @for (int i = startPage; i <= endPage; i++)
                                    {
                                        <li class="page-item @(i == paginaActual ? "active" : "")">
                                            <a class="page-link" 
                                               href="@Url.Action("Index", new { pagina = i, buscar = buscarTexto, categoria = categoriaSeleccionada })">
                                                @i
                                            </a>
                                        </li>
                                    }

                                    @if (endPage < totalPaginas)
                                    {
                                        @if (endPage < totalPaginas - 1)
                                        {
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                        }
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", new { pagina = totalPaginas, buscar = buscarTexto, categoria = categoriaSeleccionada })">@totalPaginas</a>
                                        </li>
                                    }

                                    <!-- Next -->
                                    <li class="page-item @(paginaActual >= totalPaginas ? "disabled" : "")">
                                        <a class="page-link" 
                                           href="@Url.Action("Index", new { pagina = paginaActual + 1, buscar = buscarTexto, categoria = categoriaSeleccionada })"
                                           aria-label="Siguiente">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                            
                            <div class="text-center mt-2">
                                <small class="text-muted">
                                    Página @paginaActual de @totalPaginas
                                </small>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Wishlist toggle
        document.querySelectorAll('.btn-wishlist').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                this.classList.toggle('active');
                const icon = this.querySelector('i');
                icon.classList.toggle('far');
                icon.classList.toggle('fas');
                
                // Aquí puedes agregar lógica para guardar en localStorage o hacer una petición al servidor
                const isActive = this.classList.contains('active');
                console.log(isActive ? 'Agregado a favoritos' : 'Removido de favoritos');
            });
        });

        // Add to cart
        document.querySelectorAll('.btn-add-cart').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                const productoId = this.dataset.productoId;
                
                // Animación de feedback
                const originalHTML = this.innerHTML;
                this.innerHTML = '<i class="fas fa-check"></i>';
                this.classList.add('btn-success');
                
                setTimeout(() => {
                    this.innerHTML = originalHTML;
                    this.classList.remove('btn-success');
                }, 1500);
                
                // Aquí puedes agregar la lógica para agregar al carrito
                console.log('Producto agregado al carrito:', productoId);
                
                // Puedes mostrar un toast o notificación
                // alert('Producto agregado al carrito');
            });
        });
    </script>
}

